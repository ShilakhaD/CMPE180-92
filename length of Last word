class Solution {
public:
    int lengthOfLastWord(string s) {
        int counter = 0;
        if (s.empty())
        {
            return 0;
        }
        
      for(int i=s.size()-1;i>=0 ; i--)
      { 
         if(s[i] == ' ' && counter == 0) continue;
         if(s[i]==' ') return counter;
          
         counter++;  
      }
        
        return counter;
        
    }
};
